@model SKBKontur.Treller.WebApplication.Implementation.TaskList.BusinessObjects.ViewModels.TaskListViewModel

@{
    ViewBag.Title = "Информация по задачам в трелло";
    Layout = "../Shared/_Layout.cshtml";
}

@section Header
{
    @Styles.Render("~/bundles/css/tasklist")
}

@Html.React("TaskListComponent", new
{
    data = Model,
    title = ViewBag.Title,
    updateUrl = Url.Action("Index", "TasksList"),
    pollInterval = 60000
})

@section FooterScripts
{
    @Scripts.Render("~/bunsles/jsx/tasklist")
    @Html.ReactInitJavaScript()
}